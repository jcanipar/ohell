<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :numPlay %><br>
    <%= f.number_field :numPlay %>
  </div>
  <div class="field">
    <%= f.label :league %><br>
    <%= f.check_box :league %>
  </div>

  
  <%= f.fields_for :rounds do |ff| %>
    <div class="field inline">
      <%= ff.label :score %>
      <%= ff.text_field :score, :size=>"50" %>
    </div>
    <div class="field inline">
      <%= ff.label :place %>
      <%= ff.number_field :place %>
    </div>
    <div class="field inline">
      <%= ff.label :correct %>
      <%= ff.number_field :correct %>
    </div>
    <div class="field inline">
      <%= ff.label :asterisk %>
      <%= ff.number_field :asterisk %>
    </div>
    <div class="field inline">
      <%= ff.label :player_id %>
      <%= ff.number_field :player_id %>
    </div>
  <%end%>
    <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

